<div class="container">


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {:class => "form-signin", :style => "max-width:400px; margin-left:auto; margin-right: auto;"}) do |f| %>

  <h2 class="form-signin-heading">Sign in</h2>

  <div class="form-inputs">
    <%= f.text_field :email, :required => false, :autofocus => true, :class => "form-control", :placeholder => "Email address" %>

    <br/>
    
    <%= f.password_field :password, :required => false, :class =>"form-control", :placeholder => "Password" %>
    <label class="checkbox">
    <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %> Remember me
	</label>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign in", :class =>"btn btn-lg btn-primary btn-block" %>

  <% if !(LsiRailsPrototype::Application.config.useldap == true) then %>
    <hr>
    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-default" %>
    <%= link_to "Resend confirmation instructions", confirmation_path(resource_name), :class => "btn btn-default" %>

    <% end %>
  </div>
<% end %>


</div>
