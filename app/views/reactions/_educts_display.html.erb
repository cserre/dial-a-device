<table id="educts-display-table" class="table" style="table-layout:fixed;">
  <thead>
      <th style="width:100px;">Molecule</th>
      <th style="width:200px;">Details</th>
      <th style="width:100px;">Equivalent</th>
      <th style="width:100px;">mmol</th>
      <th style="width:100px;">Amount</th>
      <th></th>
  </thead>
  <tbody>
      <% @reaction.educts.each do |sample| %>

          <tr class="fields">
            <td>

              <%= render "molecules/render", :molecule => sample.molecule, :width => "100", :height => "100" %>

            </td>
            <td><strong><%= sample.molecule.mass %></strong><br><%= link_to molecule_path(:id => sample.molecule.id, :reaction_id => @reaction.id) do %><%= sample.molecule.title %><% end %><br>
            <%= sample.molecule.formula %>
            </td>
            <td><%= sample.equivalent %></td>
            <td><%= sample.mol %></td>
            <td><%= sample.target_amount.to_s + " " + sample.unit %></td>
            <td><%= link_to('<span class="glyphicon glyphicon-remove"/>'.html_safe, sample_path(sample, :reaction_id => @reaction.id), :method => :delete, :confirm => "Are you sure you want to remove this molecule from #{@reaction.name}?", :title => "Delete #{sample.molecule.title}.") %></td>
          </tr>
      <% end %>
  </tbody>
</table>